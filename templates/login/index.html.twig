{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {{ parent() }}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-dark text-white text-center">
                        <h3 class="mb-0">Login</h3>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form action="{{ path('login') }}" method="post">
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                </div>
                                <input type="text" id="username" name="_username" class="form-control" placeholder="Email" value="{{ last_username }}" required>
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input type="password" id="password" name="_password" class="form-control" placeholder="Contraseña" required>
                            </div>
                            {# If you want to control the URL the user is redirected to on success #}
                            <input type="hidden" name="_target_path" value="/">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <small class="text-muted">¿Aún no tiene cuenta?
                            <a href="{{ path('userRegistration') }}">Registrarme</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
